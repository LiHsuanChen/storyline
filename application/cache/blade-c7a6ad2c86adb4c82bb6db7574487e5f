                            if ( response == 'OK' ){
                                window.location.reload();
                            } else {
                                console.log(response);
                                alert(response);
                            }
                        },
                        error: function(response, status, xhr) {
                            console.log(response);
                            alert('Login failed');
                        }
                    });
                },

                onlogout: function () {
                    $.ajax({
                        type: 'POST',
                        url: '/api/misc/logout',
                        success: function(response, status, xhr) {
